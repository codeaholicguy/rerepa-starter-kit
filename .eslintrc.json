{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "semi": ["error", "never"],
    "jsx-quotes": ["error", "prefer-single"],
    "object-curly-spacing": ["off"],
    "react/jsx-filename-extension": ["off"],
    "comma-dangle": ["off"],
    "space-before-function-paren": ["off"]
  }
}
